<resources>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="foxmike" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorPrimary">@color/foxmikePrimaryColor</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
    </style>



    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/secondaryTextColor</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/secondaryTextColor</item>
        <item name="colorControlNormal">@color/secondaryTextColor</item>
        <item name="colorControlActivated">@color/secondaryTextColor</item>
    </style>


</resources>
