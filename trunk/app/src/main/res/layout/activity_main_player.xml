<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_player"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/color_background_light"
    tools:context=".activities.MainPlayerActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_background_light"
        android:id="@+id/barLayout"
        android:elevation="@dimen/appBarElevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/weekdayFilterFragmentContainer">
            <view
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="com.foxmike.android.utils.WrapContentViewPager"
                android:id="@+id/weekdayPager"
                android:layout_alignParentTop="true"/>

            <com.rd.PageIndicatorView
                android:id="@+id/pageIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weekdayPager"
                android:layout_marginBottom="4dp"
                android:layout_centerHorizontal="true"
                android:background="@color/color_background_light"
                app:piv_selectedColor="@color/foxmikePrimaryColor"
                app:piv_unselectedColor="@color/unselectedGreyColor"
                app:piv_animationType="slide"
                app:piv_viewPager="@+id/weekdayPager" />

        </RelativeLayout>


    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        app:backgroundTint="@color/foxmikePrimaryColor"
        android:tint="@color/white"
        android:src="@drawable/ic_filter_list_black_24dp"
        android:id="@+id/sort_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barLayout"
        android:layout_alignEnd="@id/barLayout"
        android:layout_marginEnd="@dimen/marginHorizontal"
        android:layout_marginTop="20dp" />

    <android.support.design.widget.FloatingActionButton
        app:backgroundTint="@color/secondaryTextColor"
        android:tint="@color/primaryTextColor"
        android:src="@drawable/ic_my_location_black_24dp"
        android:id="@+id/my_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sort_button"
        android:layout_alignEnd="@id/barLayout"
        android:layout_marginEnd="@dimen/marginHorizontal"
        android:layout_marginTop="@dimen/marginVertical"/>

    <FrameLayout
        android:id="@+id/container_main_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/barLayout"
        android:layout_above="@+id/bottom_navigation_player"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:elevation="@dimen/elevation_fullscreen"
        android:id="@+id/container_fullscreen_main_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:id="@+id/container_bottom_fragment"
        android:elevation="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation_player">


    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        app:backgroundTint="@color/foxmikePrimaryColor"
        android:tint="@color/secondaryTextColor"
        android:id="@+id/map_or_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation_player"
        android:layout_marginBottom="@dimen/margin_bottom_fab"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button"/>
    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:id="@+id/bottom_navigation_player"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>