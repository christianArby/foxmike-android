<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/doNotShowAgainFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_left"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:backgroundTint="@color/primaryTextColor"
            android:id="@+id/doNotShowAgainCheckbox"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/primaryTextColor"
            android:layout_margin="@dimen/margin_minimum"
            android:id="@+id/doNotShowAgainTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/dont_show_booking_text"/>

    </LinearLayout>

</FrameLayout>
