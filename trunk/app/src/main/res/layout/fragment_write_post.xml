<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chris.kungsbrostrand.WritePostFragment">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/post_app_bar"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/post_profile_image"
        android:layout_below="@+id/post_app_bar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="13dp"
        android:src="@mipmap/profile_picture" />

    <TextView
        android:id="@+id/post_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_app_bar"
        android:layout_alignBaseline="@id/post_profile_image"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/post_profile_image"
        android:text="Display Name"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/postText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/post_profile_image"
        android:layout_margin="13dp"
        android:ems="10"
        android:hint="Skriv nÃ¥got..."
        android:inputType="textCapSentences|textMultiLine"
        android:background="@null"
        android:singleLine="false"
        android:textSize="14sp" />

</RelativeLayout>
