<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/small_advertisement_frame"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cancelledCaption"
        android:visibility="gone"
        android:elevation="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/icon"
        app:layout_constraintBottom_toBottomOf="@id/icon"
        app:layout_constraintStart_toStartOf="@id/icon"
        app:layout_constraintEnd_toEndOf="@id/icon"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="10sp"
        android:textColor="@color/red"
        android:text="@string/cancelled_capital"/>

    <ImageView
        android:contentDescription="@string/advertisement_image"
        android:id="@+id/icon"
        android:layout_width="@dimen/small_session_image_width"
        android:layout_height="@dimen/small_session_image_width"
        android:layout_marginStart="@dimen/margin_left"
        android:scaleType="centerCrop"
        android:layout_marginBottom="@dimen/margin_minimum"
        android:layout_marginTop="@dimen/marginVertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_left"
        app:layout_constraintTop_toTopOf="@id/icon"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintBottom_toBottomOf="@id/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:text="Medium Text"
            android:textColor="@color/primaryTextColor"
            android:ellipsize="end"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/leadSub2Body"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="@string/session_text"
            android:layout_below="@id/text1"/>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>