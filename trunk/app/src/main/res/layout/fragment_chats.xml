<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_dark"
    tools:context="com.foxmike.android.fragments.ChatsFragment">

    <android.support.v7.widget.RecyclerView
        android:background="@color/color_background_light"
        android:id="@+id/conv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/noContent"
        android:background="@color/color_background_dark"
        android:textColor="@color/primaryTextColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:padding="@dimen/margin_left"
        android:text="@string/you_have_no_messages"/>

</RelativeLayout>
