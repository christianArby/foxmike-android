<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_player_sessions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false">

    <include
        android:id="@+id/player_sessions_toolbar"
        layout="@layout/inbox_bar_layout"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.design.widget.TabLayout
        android:id="@+id/player_sessions_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/player_sessions_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/player_sessions_tabs"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/host_sessions_tabs">

    </android.support.v4.view.ViewPager>

</RelativeLayout>
