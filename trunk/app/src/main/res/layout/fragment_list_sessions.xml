<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/session_list_swipe_layout"
        android:clipToPadding="false"
        android:background="@color/color_background_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_background_light"
                android:elevation="10dp">
                <ProgressBar
                    android:id="@+id/progressBar0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="140dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </FrameLayout>

            <TextView
                android:clipToPadding="false"
                android:visibility="gone"
                android:id="@+id/noSessionsFound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryTextColor"
                android:paddingTop="100dp"
                android:layout_margin="@dimen/margin_left"
                style="@style/FoxmikeSubhead"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/sessions_not_found"/>

            <android.support.v7.widget.RecyclerView
                android:gravity="center_horizontal|center_vertical"
                android:clipToPadding="false"
                android:background="@color/color_background_light"
                android:id="@+id/session_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/noContent"
                android:visibility="visible"
                android:background="@color/color_background_dark"
                android:textColor="@color/primaryTextColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_vertical"
                android:textAlignment="center"
                style="@style/FoxmikeSubhead"
                android:padding="@dimen/margin_left"
                android:text="@string/no_sessions_this_time"/>
        </FrameLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</android.support.constraint.ConstraintLayout>
