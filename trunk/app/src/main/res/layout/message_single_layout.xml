<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:padding="@dimen/padding_frame"
    android:weightSum="10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="@dimen/width_ProfileImageToolbar"
        android:layout_height="@dimen/height_ProfileImageToolbar"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/profile_picture" />

    <TextView
        android:id="@+id/message_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_toEndOf="@+id/message_profile_image"
        android:text="Display Name"
        android:textSize="@dimen/text_size_mini" />

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_toEndOf="@+id/message_user_name"
        android:text="00:00"
        android:textSize="@dimen/text_size_mini" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_user_name"
        android:layout_marginEnd="@dimen/margin_right"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_toEndOf="@+id/message_profile_image"
        android:background="@drawable/message_text_background"
        android:padding="@dimen/padding_chat_box"
        android:text="Message Text"
        android:textSize="@dimen/textSize_big" />


</RelativeLayout>