<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/horizontal_session_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginEnd="@dimen/margin_right"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="@dimen/margin_minimum"
        android:layout_marginBottom="@dimen/margin_minimum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/session_image"
                android:layout_width="@dimen/small_session_image_width"
                android:layout_height="@dimen/small_session_image_width"
                android:layout_margin="@dimen/margin_minimum"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/sessionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session name"
                android:layout_marginStart="@dimen/margin_left"
                app:layout_constraintTop_toTopOf="@id/session_image"
                app:layout_constraintStart_toEndOf="@id/session_image"
                />
            <TextView
                android:id="@+id/sessionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session type"
                android:layout_marginStart="@dimen/margin_left"
                app:layout_constraintTop_toBottomOf="@id/sessionName"
                app:layout_constraintStart_toEndOf="@id/session_image"
                />
            <TextView
                android:id="@+id/sessionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session date"
                android:layout_marginStart="@dimen/margin_left"
                app:layout_constraintTop_toBottomOf="@id/sessionType"
                app:layout_constraintStart_toEndOf="@id/session_image"
                />



        </android.support.constraint.ConstraintLayout>




    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>