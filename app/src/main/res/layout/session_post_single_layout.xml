<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/spaceView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_view__big_height"
        android:background="@color/lightGreyBackgroundColor"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/session_post_image"
        android:layout_width="@dimen/profileImage_inText_width"
        android:layout_height="@dimen/profileImage_inText_height"
        android:layout_marginBottom="@dimen/display_session_textSpaceVertical"
        android:layout_marginStart="@dimen/display_session_marginStart"
        android:layout_marginTop="@dimen/margin_top_text"
        android:src="@mipmap/profile_picture"
        app:layout_constraintTop_toBottomOf="@id/spaceView"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:textColor="@color/primaryTextColor"
        android:id="@+id/session_post_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/display_session_marginStart"
        android:layout_marginTop="@dimen/margin_top_text"
        android:text="@string/loading"
        android:textSize="@dimen/display_session_heading_size"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/spaceView"
        app:layout_constraintStart_toEndOf="@id/session_post_image"/>
    <TextView
        android:id="@+id/session_post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/session_post_name"
        android:layout_below="@+id/session_post_name"
        android:layout_marginTop="@dimen/margin_minimum"
        android:layout_marginStart="@dimen/display_session_marginStart"
        android:text="@string/loading"
        app:layout_constraintTop_toBottomOf="@id/session_post_name"
        app:layout_constraintStart_toEndOf="@id/session_post_image"/>

    <TextView
        android:textColor="@color/primaryTextColor"
        android:id="@+id/session_post_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/display_session_marginStart"
        android:layout_marginStart="@dimen/display_session_marginStart"
        android:layout_marginTop="@dimen/margin_top_page"
        android:layout_marginBottom="@dimen/margin_top_page"
        android:fontFamily="sans-serif"
        android:text="Amanda och jag får antagligen besök av kompisar sth, men skulle det bli ändrade planer kommer vi!"
        android:textSize="@dimen/display_session_text_size"
        app:layout_constraintTop_toBottomOf="@id/session_post_image"/>

    <TextView
        android:id="@+id/post_nr_comments_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/display_session_marginStart"
        android:layout_marginStart="@dimen/margin_top_page"
        android:text="2 Kommentarer"
        android:layout_marginTop="@dimen/margin_top_page"
        app:layout_constraintTop_toBottomOf="@id/session_post_message"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGreyBackgroundColor"
        android:layout_marginTop="@dimen/margin_top_page"
        app:layout_constraintTop_toBottomOf="@id/post_nr_comments_text"/>

    <ImageView
        android:id="@+id/session_post_like_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="@dimen/margin_top_page"
        app:srcCompat="@mipmap/ic_thumb_up_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/border"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/session_post_like_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/display_session_marginStart"
        android:text="Gilla"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/session_post_like_image"
        app:layout_constraintBottom_toBottomOf="@id/session_post_like_image"
        app:layout_constraintStart_toEndOf="@id/session_post_like_image"/>

    <ImageView
        android:id="@+id/session_post_comment_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="@dimen/margin_top_page"
        app:srcCompat="@mipmap/ic_chat_bubble_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/border"
        app:layout_constraintEnd_toStartOf="@id/session_post_comment_text"/>
    <TextView
        android:id="@+id/session_post_comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/display_session_marginStart"
        android:layout_marginStart="@dimen/display_session_marginStart"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/make_comment_text"
        app:layout_constraintTop_toTopOf="@id/session_post_comment_image"
        app:layout_constraintBottom_toBottomOf="@id/session_post_comment_image"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>