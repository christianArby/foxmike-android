<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.foxmike.android.activities.AboutActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_background_light"
        android:elevation="4dp"
        android:id="@+id/toolbar"
        app:titleTextColor="@color/primaryTextColor"
        app:title="@string/about"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/openSourceTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:textColor="@color/primaryTextColor"
        android:paddingStart="@dimen/margin_left"
        android:paddingEnd="@dimen/margin_left"
        android:paddingTop="@dimen/marginVertical"
        android:paddingBottom="@dimen/marginVertical"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:text="@string/open_source_notices"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/spaceView1"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/spaceView0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginEnd="@dimen/margin_right" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:textColor="@color/primaryTextColor"
            android:paddingStart="@dimen/margin_left"
            android:paddingEnd="@dimen/margin_left"
            android:paddingTop="@dimen/marginVertical"
            android:paddingBottom="@dimen/marginVertical"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:text="Appversion"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/versionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/foxmikePrimaryColor"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:text="sadas"
            android:layout_margin="@dimen/margin_left"
            android:gravity="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/spaceView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginEnd="@dimen/margin_right" />



</LinearLayout>
