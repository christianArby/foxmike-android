<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/cardTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:textColor="@color/primaryTextColor"
        android:drawableStart="@drawable/ic_visa_card"
        android:drawablePadding="@dimen/margin_left"
        android:layout_marginTop="@dimen/marginVertical"
        android:layout_marginBottom="@dimen/marginVertical"
        android:layout_marginStart="@dimen/margin_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:textStyle="bold"
        android:id="@+id/paymentMethodStandard"
        android:textAllCaps="true"
        android:background="@color/lightGrayLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_minimum"
        android:text="@string/loading"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/primaryTextColor"
        android:layout_marginTop="@dimen/marginVertical"
        android:layout_marginBottom="@dimen/marginVertical"
        android:layout_marginEnd="@dimen/margin_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_marginTop="@dimen/marginVertical"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginEnd="@dimen/margin_left"
        android:layout_height="1dp"
        android:background="@color/color_divider"
        app:layout_constraintTop_toBottomOf="@id/paymentMethodStandard"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>