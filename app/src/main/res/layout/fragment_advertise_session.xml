<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_background_light"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.foxmike.android.fragments.AdvertiseSessionFragment">

    <TextView
        android:id="@+id/advertiseHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_margin="@dimen/margin_left"
        android:text="@string/advertise"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBar_cyclic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minHeight="@dimen/height_progressBar"
        android:minWidth="@dimen/width_progressBar"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/advertiseHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/noAccountContainer"
        android:background="@color/color_background_dark"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/advertiseHeading">

        <android.support.v7.widget.CardView
            android:background="@color/color_background_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/margin_left">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_left"

                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textStyle="bold"
                    android:text="@string/payout_method"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:text="@string/add_payout_method_explanation"/>

                <Button
                    android:id="@+id/addPayoutMethodBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginVertical"
                    android:padding="@dimen/margin_left"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/secondaryTextColor"
                    android:background="@drawable/square_button_primary"
                    android:text="@string/add_payout_method_text"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/advInputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/advertiseHeading">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/priceTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:layout_constraintTop_toBottomOf="@id/advertiseHeading">

            <EditText
                android:textColor="@color/primaryTextColor"
                android:backgroundTint="@color/primaryTextColor"
                android:id="@+id/priceET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_left"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginEnd="@dimen/margin_right"
                android:hint="@string/price_per_person"
                android:inputType="phone"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:focusable="false"
                android:layout_gravity="center_vertical"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/dateTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:errorEnabled="true"
            app:layout_constraintTop_toBottomOf="@id/priceTIL">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/dateET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/ic_date_range_black_24dp"
                android:drawablePadding="@dimen/margin_left"
                android:paddingStart="@dimen/margin_left"
                android:paddingEnd="@dimen/margin_right"
                android:hint="@string/date"
                android:inputType="date"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:layout_gravity="center_vertical"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/timeTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:errorEnabled="true"
            app:layout_constraintTop_toBottomOf="@id/dateTIL">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/timeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/ic_access_time_black_24dp"
                android:drawablePadding="@dimen/margin_left"
                android:paddingStart="@dimen/margin_left"
                android:paddingEnd="@dimen/margin_right"
                android:hint="@string/time"
                android:inputType="textPersonName"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:layout_gravity="center_vertical"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/advertiseBtn"
            android:background="@drawable/square_button_primary"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/secondaryTextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_left"
            android:text="@string/advertise_session"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
