<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_player"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/primaryBackgroundColor"
    tools:context=".MainPlayerActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/weekdayFilterFragmentContainer">
        <view
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            class="com.example.chris.kungsbrostrand.WrapContentViewPager"
            android:id="@+id/weekdayPager"
            android:layout_alignParentTop="true"/>

        <com.rd.PageIndicatorView
            android:id="@+id/pageIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weekdayPager"
            android:layout_centerHorizontal="true"
            android:background="@color/primaryBackgroundColor"
            app:piv_animationType="slide"
            app:piv_viewPager="@+id/weekdayPager" />

    </RelativeLayout>



    <FrameLayout

        android:id="@+id/container_main_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/weekdayFilterFragmentContainer"
        android:layout_above="@+id/bottom_navigation_player"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/map_or_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation_player"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button"/>
    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:id="@+id/bottom_navigation_player"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>