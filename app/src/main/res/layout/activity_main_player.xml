<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_player"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/color_background_light"
    tools:context=".activities.MainPlayerActivity">

    <com.aurelhubert.ahbottomnavigation.AHBottomNavigationViewPager
        android:id="@+id/mainPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation_player"
        android:layout_alignParentTop="true">
    </com.aurelhubert.ahbottomnavigation.AHBottomNavigationViewPager>

    <FrameLayout
        android:elevation="@dimen/elevation_fullscreen"
        android:id="@+id/container_fullscreen_main_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:id="@+id/container_bottom_fragment"
        android:elevation="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation_player">


    </FrameLayout>

    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:id="@+id/bottom_navigation_player"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>