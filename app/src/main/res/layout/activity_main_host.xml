<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_host"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".MainPlayerActivity">

    <FrameLayout
        android:id="@+id/container_main_host"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation_host"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/colorPrimaryDark"
        app:itemTextColor="@color/colorPrimaryDark"
        app:menu="@menu/bottom_navigation_host_items" />
</RelativeLayout>