<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondaryColor">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custom_bar_image"
        android:layout_width="@dimen/width_ProfileImageToolbar"
        android:layout_height="@dimen/height_ProfileImageToolbar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_minimum"
        android:src="@mipmap/profile_picture" />

    <TextView
        android:id="@+id/custom_bar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_minimum"
        android:text="@string/placeholder_user_name"
        android:textColor="@color/secondaryTextColor"
        android:layout_toStartOf="@id/custom_bar_image"
        android:textSize="@dimen/textSize_big" />

    <TextView
        android:id="@+id/custom_bar_lastSeen"
        android:layout_width="wrap_content"
        android:layout_toStartOf="@id/custom_bar_image"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/custom_bar_name"
        android:text="@string/placeholder_last_seen"
        android:textColor="@color/secondaryTextColor"/>

</RelativeLayout>