<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_light"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/displaySessionAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="TEST"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="@dimen/margin_left"
            app:expandedTitleMarginEnd="@dimen/margin_right"
            android:fitsSystemWindows="true">

            <RelativeLayout
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/cardViewContainer"
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/sessionImageCardView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical">

                    <TextView
                        android:elevation="8dp"
                        android:background="@color/foxmikePrimaryColor"
                        android:textColor="@color/secondaryTextColor"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:id="@+id/advertisedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/sessionImageCardView"
                        app:layout_constraintEnd_toEndOf="@id/sessionImageCardView"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/margin_right"
                        android:paddingStart="@dimen/margin_left"
                        android:paddingEnd="@dimen/margin_right"
                        android:paddingTop="@dimen/margin_minimum"
                        android:paddingBottom="@dimen/margin_minimum"
                        android:text="ADVERTISED"/>

                    <ImageView
                        android:contentDescription="@string/session_image"
                        android:id="@+id/displaySessionImage"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/add_btn" />

                </android.support.constraint.ConstraintLayout>

            </RelativeLayout>

            <TextView
                android:textColor="@color/secondaryTextColor"
                android:id="@+id/sessionType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:text="test2"
                android:textAllCaps="true"
                app:layout_collapseMode="pin"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginBottom="68dp"
                android:layout_gravity="bottom"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/display_studio_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"/>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
