<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/edit_studio_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:paddingStart="@dimen/margin_left"
        android:paddingEnd="@dimen/margin_left"
        android:paddingTop="@dimen/marginVertical"
        android:paddingBottom="@dimen/marginVertical"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:textColor="@color/primaryTextColor"
        android:text="@string/edit_session_details"
        android:clickable="true"
        android:focusable="true"
        android:drawableEnd="@mipmap/ic_mode_edit_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/spaceView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginEnd="@dimen/margin_right"
        app:layout_constraintTop_toBottomOf="@id/edit_studio_question"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/preview_studio_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:paddingStart="@dimen/margin_left"
        android:paddingEnd="@dimen/margin_left"
        android:paddingTop="@dimen/marginVertical"
        android:paddingBottom="@dimen/marginVertical"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:textColor="@color/primaryTextColor"
        android:text="@string/preview_session"
        android:clickable="true"
        android:focusable="true"
        android:drawableEnd="@mipmap/ic_mode_edit_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spaceView1"/>

    <android.support.constraint.ConstraintLayout
        android:visibility="gone"
        android:id="@+id/nothingAdvContainer"
        android:background="@color/color_background_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/preview_studio_question">

        <android.support.v7.widget.CardView
            android:background="@color/color_background_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/margin_left">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_left"

                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textStyle="bold"
                    android:text="@string/advertise_your_session"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:text="@string/not_advertised_explanation"/>

                <Button
                    android:id="@+id/advertiseBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginVertical"
                    android:padding="@dimen/margin_left"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/secondaryTextColor"
                    android:background="@drawable/square_button_primary"
                    android:text="@string/advertise_session"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nothingAdvContainer">
        <TextView
            android:id="@+id/advertisedHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_left"
            android:text="@string/advertised_text"
            android:textColor="@color/primaryTextColor"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/smallAdvertisedSessionsListRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/addAdditionalSessionBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_left">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/primaryTextColor"
                android:text="@string/add_advertisement"
                android:drawableStart="@mipmap/ic_add_black_24dp"
                android:drawableTint="@color/foxmikePrimaryColor"
                android:drawablePadding="@dimen/margin_left"
                android:paddingStart="@dimen/margin_left"
                android:paddingEnd="@dimen/margin_right"
                android:paddingTop="@dimen/margin_minimum"
                android:paddingBottom="@dimen/margin_minimum"/>


        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/notAdvertisedHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_left"
            android:text="@string/previous_sessions"
            android:textColor="@color/primaryTextColor"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/smallNotAdvertisedSessionsListRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>



</android.support.constraint.ConstraintLayout>