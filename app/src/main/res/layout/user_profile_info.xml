<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileIV"
        android:layout_width="@dimen/height_profileImage"
        android:layout_height="@dimen/width_profileImage"
        android:layout_marginTop="@dimen/margin_top_page"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/profileTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/display_session_marginStart"
        android:layout_marginTop="@dimen/margin_top_text"
        android:text="@string/loading"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/text_size_bigger"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileIV"/>

    <TextView
        android:id="@+id/edit_session_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/display_session_marginStart"
        android:paddingEnd="@dimen/display_session_marginStart"
        android:paddingTop="@dimen/margin_minimum"
        android:paddingBottom="@dimen/margin_top_text"
        android:text="@string/show_and_edit_profile_text"
        android:textColor="?android:attr/textColorHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileTV"/>

    <View
        android:id="@+id/spaceView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/edit_session_question"/>

    <TextView
        android:id="@+id/switchModeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:paddingStart="@dimen/display_session_marginStart"
        android:paddingEnd="@dimen/display_session_marginStart"
        android:paddingTop="@dimen/margin_top_text"
        android:paddingBottom="@dimen/margin_top_text"
        android:text="@string/switch_to_trainer_mode"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/spaceView1"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:contentDescription="@string/switch_mode_icon"
        android:id="@+id/switchModeIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/display_session_marginStart"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/ic_swap_calls_black_24dp"
        app:layout_constraintTop_toTopOf="@id/switchModeTV"
        app:layout_constraintBottom_toBottomOf="@id/switchModeTV"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/spaceView2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/switchModeTV"/>

    <TextView
        android:id="@+id/logOutTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/display_session_marginStart"
        android:paddingEnd="@dimen/display_session_marginStart"
        android:paddingTop="@dimen/margin_top_text"
        android:paddingBottom="@dimen/margin_top_text"
        android:text="@string/log_out_text"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/spaceView2"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:contentDescription="log_out_icon"
        android:id="@+id/logOutIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/display_session_marginStart"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/ic_cancel_black_24dp"
        app:layout_constraintTop_toTopOf="@id/logOutTV"
        app:layout_constraintBottom_toBottomOf="@id/logOutTV"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>