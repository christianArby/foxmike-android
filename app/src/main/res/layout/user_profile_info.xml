<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileIV"
        android:layout_width="@dimen/height_profileImage"
        android:layout_height="@dimen/width_profileImage"
        android:layout_marginTop="@dimen/marginVertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/profileTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginTop="@dimen/marginVertical"
        android:text="@string/loading"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileIV"/>

    <TextView
        android:id="@+id/userNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginTop="2dp"
        android:paddingBottom="@dimen/marginVertical"
        android:text="@string/loading"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="?android:attr/textColorHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileTV"/>

    <View
        android:id="@+id/spaceView0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginEnd="@dimen/margin_right"
        app:layout_constraintTop_toBottomOf="@id/userNameTV"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/edit_session_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:paddingStart="@dimen/margin_left"
        android:paddingEnd="@dimen/margin_left"
        android:paddingTop="@dimen/marginVertical"
        android:paddingBottom="@dimen/marginVertical"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:text="@string/show_and_edit_profile_text"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spaceView0"/>

    <ImageView
        android:contentDescription="edit_session_question_icon"
        android:id="@+id/edit_session_questionIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_left"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/ic_mode_edit_black_24dp"
        app:layout_constraintTop_toTopOf="@id/edit_session_question"
        app:layout_constraintBottom_toBottomOf="@id/edit_session_question"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/spaceView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginEnd="@dimen/margin_right"
        app:layout_constraintTop_toBottomOf="@id/edit_session_question"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/switchModeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:paddingStart="@dimen/margin_left"
        android:paddingEnd="@dimen/margin_left"
        android:paddingTop="@dimen/marginVertical"
        android:paddingBottom="@dimen/marginVertical"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:text="@string/switch_to_trainer_mode"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/spaceView1"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:contentDescription="@string/switch_mode_icon"
        android:id="@+id/switchModeIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/margin_left"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/ic_swap_calls_black_24dp"
        app:layout_constraintTop_toTopOf="@id/switchModeTV"
        app:layout_constraintBottom_toBottomOf="@id/switchModeTV"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/spaceView2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginEnd="@dimen/margin_right"
        app:layout_constraintTop_toBottomOf="@id/switchModeTV"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/addPaymentMethodTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:paddingStart="@dimen/margin_left"
        android:paddingEnd="@dimen/margin_left"
        android:paddingTop="@dimen/marginVertical"
        android:paddingBottom="@dimen/marginVertical"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:text="@string/payout_preferences"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/spaceView2"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:contentDescription="PaymentMethodIcon"
        android:id="@+id/addPaymentMethodIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/margin_left"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_attach_money_black_24dp"
        app:layout_constraintTop_toTopOf="@id/addPaymentMethodTV"
        app:layout_constraintBottom_toBottomOf="@id/addPaymentMethodTV"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/spaceView3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginEnd="@dimen/margin_right"
        app:layout_constraintTop_toBottomOf="@id/addPaymentMethodTV"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/addPayoutMethodTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:paddingStart="@dimen/margin_left"
        android:paddingEnd="@dimen/margin_left"
        android:paddingTop="@dimen/marginVertical"
        android:paddingBottom="@dimen/marginVertical"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:text="@string/payment_methods_text"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/spaceView3"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:contentDescription="PayoutMethodIcon"
        android:id="@+id/addPayoutMethodIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/margin_left"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_credit_card_black_24dp"
        app:layout_constraintTop_toTopOf="@id/addPayoutMethodTV"
        app:layout_constraintBottom_toBottomOf="@id/addPayoutMethodTV"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/spaceView4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginEnd="@dimen/margin_right"
        app:layout_constraintTop_toBottomOf="@id/addPayoutMethodTV"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/logOutTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_left"
        android:paddingEnd="@dimen/margin_left"
        android:paddingTop="@dimen/marginVertical"
        android:paddingBottom="@dimen/marginVertical"
        android:text="@string/log_out_text"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/spaceView4"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:contentDescription="log_out_icon"
        android:id="@+id/logOutIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_left"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/ic_cancel_black_24dp"
        app:layout_constraintTop_toTopOf="@id/logOutTV"
        app:layout_constraintBottom_toBottomOf="@id/logOutTV"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>