<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cardViewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/sessionImageCardView"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <ImageView
                    android:contentDescription="@string/session_image"
                    android:id="@+id/displaySessionImage"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/add_btn" />

                <TextView
                    android:textColor="@color/secondaryTextColor"
                    android:id="@+id/sessionType"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/display_session_marginStart"
                    android:textAllCaps="true"
                    android:layout_marginBottom="70dp"
                    app:layout_constraintBottom_toBottomOf="@id/displaySessionImage"/>

                <TextView

                    android:id="@+id/sessionName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:padding="@dimen/display_session_marginStart"
                    android:text="@string/session_name_goes_here"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="@dimen/text_Size_big_heading"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_minimum"
                    app:layout_constraintBottom_toBottomOf="@id/displaySessionImage"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/infoBlock"
        app:layout_constraintTop_toBottomOf="@id/cardViewContainer"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_bottom_text"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="wrap_content">

        <ImageView
            android:tint="@color/white"
            android:id="@+id/locationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/display_session_marginStart"
            android:layout_marginTop="@dimen/margin_top_text"
            android:src="@drawable/ic_edit_location_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            
            app:layout_constraintStart_toEndOf="@id/locationIcon"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/addressAndSessionTypeTW"
            android:layout_marginTop="@dimen/margin_top_text"
            android:textColor="@color/secondaryTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_minimum"
            android:layout_marginRight="@dimen/margin_minimum"
            android:layout_marginStart="@dimen/display_session_marginStart"
            android:text="@string/address"/>

        <ImageView
            android:id="@+id/dateIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/display_session_marginStart"
            android:layout_marginTop="@dimen/margin_top_text"
            android:src="@mipmap/ic_date_range_black_24dp"
            android:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/locationIcon" />

        <TextView
            android:id="@+id/dateAndTimeTW"
            app:layout_constraintStart_toEndOf="@id/dateIcon"
            app:layout_constraintTop_toBottomOf="@id/locationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_minimum"
            android:layout_marginTop="@dimen/margin_top_text"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginStart="@dimen/display_session_marginStart"
            android:text="@string/loading" />

        <ImageView
            android:tint="@color/white"
            android:id="@+id/maxParticipantsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="@dimen/margin_top_text"
            android:src="@mipmap/ic_people_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/participantsTW"
            app:layout_constraintBottom_toBottomOf="@+id/addressAndSessionTypeTW"
            app:layout_constraintStart_toEndOf="@id/maxParticipantsIcon"
            android:layout_marginTop="@dimen/margin_top_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="0/0"
            android:layout_marginLeft="@dimen/margin_minimum"
            android:layout_marginRight="@dimen/margin_minimum"
            android:layout_marginStart="@dimen/display_session_marginStart"
            android:textColor="@color/secondaryColor"
            android:clickable="true"/>

        <ImageView
            android:tint="@color/white"
            android:id="@+id/durationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_text"
            android:src="@mipmap/ic_timelapse_black_24dp"
            app:layout_constraintStart_toStartOf="@id/maxParticipantsIcon"
            app:layout_constraintTop_toBottomOf="@id/locationIcon" />

        <TextView
            
            app:layout_constraintBottom_toBottomOf="@id/dateAndTimeTW"
            app:layout_constraintStart_toStartOf="@id/participantsTW"
            android:textColor="@color/secondaryTextColor"
            android:text="40 min"
            android:id="@+id/durationTW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_minimum"
            android:layout_marginTop="@dimen/margin_top_text"
            android:gravity="center_vertical"/>

    </android.support.constraint.ConstraintLayout>

    <Button
        app:layout_constraintTop_toBottomOf="@id/infoBlock"
        android:id="@+id/displaySessionBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondaryColor"
        android:text="@string/join_session"
        android:textColor="@color/secondaryTextColor" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/hostInfoContainer"
        app:layout_constraintTop_toBottomOf="@id/displaySessionBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hostName"
            android:textColor="@color/primaryTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_marginStart="@dimen/display_session_marginStart"
            android:layout_marginTop="@dimen/margin_top_text"
            android:text="@string/trainer_name"
            android:textSize="@dimen/display_session_heading_size"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/sendMessageToHost"
            android:textColor="@color/secondaryColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/display_session_text_size"
            android:layout_marginStart="@dimen/display_session_marginStart"
            android:layout_marginTop="@dimen/margin_minimum"
            android:text="@string/send_message_text"
            app:layout_constraintTop_toBottomOf="@id/hostName"
            app:layout_constraintStart_toStartOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="@dimen/margin_minimum"
            android:layout_marginBottom="@dimen/margin_minimum"
            android:layout_width="@dimen/profileImage_inText_height"
            android:layout_height="@dimen/profileImage_inText_width"
            android:id="@+id/displaySessionHostImage"
            android:layout_marginEnd="@dimen/display_session_marginStart"
            android:src="@drawable/background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/hostInfoContainer"
        android:id="@+id/novelInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/spaceView"
            android:layout_marginTop="@dimen/margin_top_text"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/display_session_marginStart"
            android:layout_marginEnd="@dimen/display_session_marginStart"
            android:layout_height="1dp"
            android:background="@color/lightGrayLine"/>

        <TextView
            android:textColor="@color/primaryTextColor"
            android:id="@+id/whatHeadingTW"
            android:textStyle="bold"
            android:textSize="@dimen/display_session_heading_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/what_heading"
            android:layout_marginStart="@dimen/display_session_marginStart"
            android:layout_marginTop="@dimen/margin_top_text" />

        <TextView
            android:textColor="@color/primaryTextColor"
            android:id="@+id/whatTW"
            android:layout_width="match_parent"
            android:textSize="@dimen/display_session_text_size"
            android:layout_marginEnd="@dimen/display_session_marginStart"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/display_session_textSpaceVertical"
            android:layout_marginStart="@dimen/display_session_marginStart"
            />

        <View
            android:layout_marginTop="@dimen/display_session_textSpaceVertical"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/display_session_marginStart"
            android:layout_marginEnd="@dimen/display_session_marginStart"
            android:layout_height="1dp"
            android:background="@color/lightGrayLine"/>

        <TextView
            android:textColor="@color/primaryTextColor"
            android:id="@+id/whoHeadingTW"
            android:textSize="@dimen/display_session_heading_size"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/display_session_marginStart"
            android:text="@string/who_heading"
            android:layout_marginStart="15dp"
            android:layout_marginTop="@dimen/display_session_textSpaceVertical" />

        <TextView
            android:textColor="@color/primaryTextColor"
            android:layout_marginTop="@dimen/display_session_textSpaceVertical"
            android:id="@+id/whoTW"
            android:layout_width="match_parent"
            android:textSize="@dimen/display_session_text_size"
            android:layout_marginEnd="@dimen/display_session_marginStart"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/display_session_marginStart"/>

        <View
            android:layout_marginTop="@dimen/display_session_textSpaceVertical"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/display_session_marginStart"
            android:layout_marginEnd="@dimen/display_session_marginStart"
            android:layout_height="1dp"
            android:background="@color/lightGrayLine"/>

        <TextView
            android:textColor="@color/primaryTextColor"
            android:id="@+id/whereHeadingTW"
            android:textSize="@dimen/display_session_heading_size"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/display_session_marginStart"
            android:text="@string/where_heading"
            android:layout_marginStart="@dimen/display_session_marginStart"
            android:layout_marginTop="@dimen/display_session_textSpaceVertical" />

        <TextView
            android:textColor="@color/primaryTextColor"
            android:layout_marginTop="@dimen/display_session_textSpaceVertical"
            android:layout_marginEnd="@dimen/display_session_marginStart"
            android:id="@+id/whereTW"
            android:textSize="@dimen/display_session_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/display_session_marginStart"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/child_fragment_container"
        app:layout_constraintTop_toBottomOf="@id/novelInfo"
        android:layout_marginTop="@dimen/display_session_textSpaceVertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mini_map_height"/>

    <FrameLayout
        app:layout_constraintTop_toBottomOf="@id/child_fragment_container"
        android:layout_marginTop="@dimen/display_session_textSpaceVertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/write_post_layout">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/session_post_current_user_image"
            android:layout_width="@dimen/width_ProfileImageToolbar"
            android:layout_height="@dimen/height_ProfileImageToolbar"
            android:layout_marginBottom="@dimen/margin_bottom_text"
            android:layout_marginStart="@dimen/display_session_marginStart"
            android:src="@mipmap/profile_picture" />

        <TextView
            android:textColor="@color/primaryTextColor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Skriv nÃ¥got"
            android:textSize="@dimen/display_session_heading_size"
            android:layout_marginStart="60dp"
            android:layout_gravity="center_vertical"/>

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/write_post_layout"
        android:id="@+id/post_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>