<resources>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="foxmike" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorPrimary">@color/foxmikePrimaryColor</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>

        <!-- Custom font -->
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="fontFamily">@font/open_sans_regular</item>-->

    </style>

    <style name="FoxmikeHeading">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">20sp</item>

        <!-- Custom font -->
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>-->

        <!-- Default font -->
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="FoxmikeSemiBold">
        <item name="android:textColor">@color/primaryTextColor</item>

        <!-- Custom font -->
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>-->

        <!-- Default font -->
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="FoxmikeTitle">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>

        <!-- Custom font -->
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>-->

        <!-- Default font -->
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="FoxmikeBodySemiBold">
        <item name="android:textColor">@color/primaryTextColor</item>

        <!-- Custom font -->
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="fontFamily">@font/open_sans_semi_bold</item>-->

        <!-- Default font -->
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="foxmikeActionbar" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorPrimary">@color/foxmikePrimaryColor</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
    </style>

    <style name="fullscreenDialog" parent="foxmike" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="partscreenDialog" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">75%</item>
        <item name="android:windowMinWidthMinor">75%</item>
        <item name="android:windowNoTitle">true</item>
    </style>



    <style name="TextLabel" parent="Theme.Design.Light">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/secondaryTextColor</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/secondaryTextColor</item>
        <item name="colorControlNormal">@color/secondaryTextColor</item>
        <item name="colorControlActivated">@color/secondaryTextColor</item>
    </style>

    <style name="TextLabelDark" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/primaryTextColor</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/primaryTextColor</item>
        <item name="colorControlNormal">@color/primaryTextColor</item>
        <item name="colorControlActivated">@color/primaryTextColor</item>
    </style>

    <style name="TextLabelDark2" parent="foxmike">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/primaryTextColor</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">14sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/primaryTextColor</item>
        <item name="colorControlNormal">@color/primaryTextColor</item>
        <item name="colorControlActivated">@color/primaryTextColor</item>
    </style>

    <style name="foxmikeTabsTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/rating_progress_bar</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxHeight">22dp</item>
    </style>

    <style name="CustomRatingBar" parent="android:Widget.RatingBar">
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
    </style>

    <style name="FullStarRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/full_star_rating_bar</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
    </style>


</resources>
