<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity"
    android:id="@+id/mapsActivity">

    <fragment android:name="com.example.chris.kungsbrostrand.WeekdayFilterFragment"
        android:id="@+id/insertedFragment"
        android:tag="weekdayFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/insertedFragment"
        android:layout_alignParentStart="true"
        tools:context="com.example.chris.kungsbrostrand.MapsActivity"
        tools:layout="@layout/dummy_mapviewfragment"/>


</RelativeLayout>