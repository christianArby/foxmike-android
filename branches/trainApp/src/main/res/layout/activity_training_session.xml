<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/sessionNameET"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Session name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/sessionTypeET"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Session type"
        android:inputType="textPersonName"
        android:focusable="false"
        android:longClickable="false"/>


    <EditText
        android:id="@+id/dateET"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Date"
        android:inputType="textPersonName"
        android:focusable="false"
        android:longClickable="false"/>


    <EditText
        android:id="@+id/timeET"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Time"
        android:inputType="textPersonName"
        android:focusable="false"
        android:longClickable="false"/>

    <EditText
        android:id="@+id/levelET"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Level"
        android:inputType="textPersonName"
        android:focusable="false"
        android:longClickable="false"/>

    <EditText
        android:id="@+id/maxParticipantsET"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:ems="10"
        android:focusable="false"
        android:gravity="center_vertical"
        android:hint="Maximum participants"
        android:inputType="number"
        android:longClickable="false" />


    <Button
        android:id="@+id/createSessionBtn"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Create session" />


</LinearLayout>
